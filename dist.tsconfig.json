{
  "compilerOptions": {
    "outDir": "dist",
    "module": "commonjs",
    "target": "es5",
    "lib": [ "es6", "dom" ],
    "sourceMap": true,
    "allowJs": false,
    "jsx": "react",
    "moduleResolution": "node",
    "rootDirs": [ "src" ],
    "baseUrl": "src",
    "strictNullChecks": true,
    "esModuleInterop": true,
    "declaration": true,
    "typeRoots": [ "src/typings.d.ts" ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "src/**/test.tsx",
    "src/**/stories.tsx"
  ]
}